    | {% assign total_amount = 0    %}
    | {% assign index        = 0    %}
    | {% assign funded       = true %}
    table.table.table-striped.text-center
        + table-header
        | {% for page in participants %}
        |   {% if page.funded  == true %}
        + table-row
        + add-email
        |   {% endif  %}
        | {% endfor %}
        + total_amount

    + show-emails



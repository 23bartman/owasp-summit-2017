mixin table-header
    thead
        th #
        th name (title)
        //th role
        th project-leader
        th chapter-leader
        th time covered by
        th Travel from
        th flight cost
        th ticket cost
        th Required funds
        | {% if funded  == true %}
        th Amount funded
        th Who funded
        | {% endif %}
        th (subtotal)

mixin table-row
    | {% if funded  == true %}
    |   {% assign total_amount = total_amount | plus: page.funded-amount %}
    | {% else %}
    |   {% assign total_amount = total_amount | plus: page.required-funds %}
    | {% endif %}
    | {% assign index        = index        | plus: 1                  %}
    tr
        td {{ index }}
        td.text-left.large-column
            a(href='page.url') {{ page.title     }}
        td  {{ page.project-leader     }}
        td  {{ page.chapter-leader     }}
        td  {{ page.time               }}
        td  {{ page.travel-from        }}
        td ${{ page.flight-cost        }}
        td ${{ page.ticket-cost        }}
        td ${{ page.required-funds     }}
        | {% if funded  == true %}
        td ${{ page.funded-amount      }}
        td.large-column  {{ page.funded-who         }}
        | {% endif %}
        td ${{ total_amount            }}

mixin total_amount
    tr
        td
        td
        td
        td
        td
        td
        td
        td
        | {% if funded  == true %}
        td
        td
        td
            h5 Total funded:
        td
            h5 ${{ total_amount }}
        | {% else %}
        td
            h5 Total required:
        td
            h5 ${{ total_amount }}
        | {% endif %}

mixin add-email
    | {% if jekyll.environment == 'development' %}
    |   {% if page.email != null %}
    |       {% assign emails = emails | append: page.email %}
    |   {% else %}
    |       {% assign emails = emails | append: site.data.emails[page.title] %}
    |   {% endif %}
    |   {% if forloop.last != true %}
    |       {% assign emails = emails | append: ' , ' %}
    |   {% endif %}
    | {% endif %}

mixin show-emails
    | {% if jekyll.environment == 'development' %}
    textarea {{emails}}
    | {% endif %}

mixin show-email-list
    | {% assign emails       = "" %}
    h3 {{ list-title }}
    | {% for page in list-pages %}
    + add-email
    | {% endfor %}
    + show-emails


.participants-table


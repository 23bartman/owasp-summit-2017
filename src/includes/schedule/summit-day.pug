mixin show-session-at-time
    | {% for session in day_Data[time]              %}
    div
        a(href="{{session.url}}") {{ session.name }}
        | {% if session.locked %}
        span.glyphicon.glyphicon-lock
        | {% endif             %}
    .track-info {{ session.track }}
    | {% endfor                                     %}

mixin show-room
    | {% assign day_Data = site.data.mapped.schedule.by_Day[page.day][room] %}
    td
        h4 {{ room }}
    td
        | {% assign time = 'AM-1'  %}
        + show-session-at-time
    td
        | {% assign time = 'PM-1'  %}
        + show-session-at-time
    td
        | {% assign time = 'PM-2'  %}
        + show-session-at-time
    td
        | {% assign time = 'PM-3'  %}
        + show-session-at-time
    td
        | {% assign time = 'Eve'  %}
        + show-session-at-time
    td
        | {% assign time = 'no-time'  %}
        + show-session-at-time


.page-content
        //.container
        .schedule
            h3 {{ page.title }}
            p
                a(href='/schedule') Back to schedule list
            table.table
                thead
                    th.text-center
                    th.text-center
                        h4 AM 1
                        .day-time 10:00 to 12:00
                    th.text-center
                        h4 PM 1
                        .day-time 13:00 to 14:30
                    th.text-center
                        h4 PM 2
                        .day-time 14:30 to 15:40
                    th.text-center
                        h4 PM 3
                        .day-time 16:00 to 17:30
                    th.text-center
                        h4 Evening
                        .day-time 20:00 to 23:59
                    th.text-center
                        h4 (no-time)
                tr
                    | {% assign room = 'Room-1'  %}
                    + show-room
                tr
                    | {% assign room = 'Room-2'  %}
                    + show-room
                tr
                    | {% assign room = 'Room-3'  %}
                    + show-room
                tr
                    | {% assign room = 'Room-4'  %}
                    + show-room
                tr
                    | {% assign room = 'Room-5'  %}
                    + show-room
                tr
                    | {% assign room = 'Room-6'  %}
                    + show-room
                tr
                    | {% assign room = 'Villa-1'  %}
                    + show-room
                tr
                    | {% assign room = 'no-location'  %}
                    + show-room
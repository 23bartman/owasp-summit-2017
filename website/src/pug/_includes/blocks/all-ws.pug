.featured-ws
    .container
        .row
            .col-xs-0
            .col-xs-12
                h1 Featured Working Sessions
            .col-xs-0
        .row
            .col-xs-0
            .col-xs-12
                .row
                    | {% for page in site.pages %}
                    |   {% if page.title and page.type == 'workshop' and page.status == 'featured' %}
                    .col-xs-6.col-sm-4
                        .ws-box
                            .ws-title
                                a(href="{{page.url}}") {{page.title | truncate: 45 }}
                            .ws-description  {{page.description | truncate: 180 }}
                    |   {% endif %}
                    | {% endfor %}
            .col-xs-0
        .row
            .col-xs-0
            .col-xs-12
                h1 Other Working Sessions
            .col-xs-0

        .row
            .col-xs-0
            .col-xs-12
                .row
                    | {% for page in site.pages %}
                    |   {% if page.title and page.type == 'workshop' and page.status != 'featured' %}
                    .col-xs-6.col-sm-4
                        .ws-box
                            .ws-title
                                a(href="{{page.url}}") {{page.title | truncate: 45 }}
                            | {% if page.description != null %}
                            .ws-description  {{page.description | truncate: 180 }}
                            | {% else %}
                            .ws-description  {{page.content | strip_html | truncate: 180 }}
                            | {% endif %}
                    |   {% endif %}
                    | {% endfor %}
            .col-xs-0